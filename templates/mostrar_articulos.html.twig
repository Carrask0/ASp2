{% extends 'base.html.twig' %}

{% block title %}Listado de Articulos{% endblock %}

{% block content %}
{% if articulos %}
    <h1>Listado de Articulos</h1>
    <table border=”1”>
        <tr>
            <th>ID</th>
            <th>Titulo</th>
            <th>Fecha de Creacion</th>
        </tr>
        {% for articulo in articulos %}
        <tr>
            <td>{{articulo.id}}</td>
            <td><a href="{{ path('articulo_id', {'id': articulo.id}) }}">{{ articulo.title }}</a></td>
            <td>{{articulo.created}}</td>
        </tr>
        {% endfor %}
    </table>
{% else %}
    <p> No se encontraron articulos </p>
{% endif %}
{% endblock %}